<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    android:id="@+id/recycle_challenge_row_id">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="4dp">

        <ImageView android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:id="@+id/image_challenge_row"
            android:src="@drawable/ic_challenge"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_challenge_row"
            android:id="@+id/textView_title_challenge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000"
            android:textSize="15sp"
            android:layout_below="@+id/textView_title_challenge"
            android:layout_toEndOf="@+id/image_challenge_row"
            android:id="@+id/textView_pontuation_challenge"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>